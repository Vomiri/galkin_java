package com.mycompany.lab7;
public class Lab7 {

    public static void main(String[] args) {
        int X =1;
        System.out.println("При x=1");        
        System.out.print("X > 0 ");
        System.out.println(X > 0);
        System.out.print("X < 0 ");
        System.out.println(X < 0);
        System.out.print("X != 0 ");
        System.out.println(X != 0);
        System.out.print("X >= 0 ");
        System.out.println(X >= 0);
        System.out.print("X != 0 ");
        System.out.println(X != 1);    

        }    
    }
