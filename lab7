import java.util.Scanner;
public class Lab7 {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Введите год");
        int year = scanner.nextInt();
        System.out.println((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0));        }
    }

